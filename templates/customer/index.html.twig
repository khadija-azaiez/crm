{% extends "layout.html.twig" %}

{% block content %}

    <div class="row mt-4 mb-4">
        <div class="col-12">
            <h1>Liste de clients</h1>
        </div>
    </div>

    <div class="row mt-4 mb-4">
        <div class=" col-lg-12">
            <a class="btn btn-primary float-right ml-2 " data-toggle="collapse" href="#search-client" role="button" aria-expanded="false"
               aria-controls="collapseExample">
                {{'body.filter'|trans }}</a>
            <a class="btn btn-primary btn float-right" href="{{ path('customer-add') }}">{{'body.add'|trans }}</a>
        </div>
    </div>

    <div class="row">
        <div class="collapse col-12 {{ show}}" id="search-client">

            {{ form_start(form) }}
            {{ form_row(form.name) }}
            <button type="submit" class="btn btn-outline-dark col-12 mb-2 mt-2 col-md-2">{{'body.search'|trans }}</button>
            {{ form_end(form) }}
        </div>
    </div>





    <div class="row">
        {% for customer in listecust %}
            {% include 'customer/customer-card.html.twig' with {

                id: customer.id,
                name: customer.name,
                phone: customer.phone,
                cin: customer.cin
            } only %}

        {% endfor %}
    </div>

{% endblock %}