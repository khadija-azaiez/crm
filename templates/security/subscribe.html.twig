{% extends "layout.html.twig" %}

{% block content %}

    <section class="content col-12 col-md-6 mr-auto ml-auto">

        {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.password) }}

        <button type="submit" class="btn btn-primary float-right">Subscribe</button>
        <button class="btn btn-secondary float-right  mr-2" type="reset">Annuler</button>

        {{ form_end(form) }}

    </section>

{% endblock %}