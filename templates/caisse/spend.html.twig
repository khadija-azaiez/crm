{% extends "layout.html.twig" %}

{% block content %}

    <div class="row">
        <div class="col-12">
            <h1>
                Liste des d√©penses
            </h1>

        </div>
    </div>

    <div class="row mt-4 mb-4">
        <div class=" col-lg-12">
            <a class="btn btn-primary float-right ml-2 " data-toggle="collapse" href="#search"
               role="button" aria-expanded="false"
               aria-controls="collapseExample">
                +Filtre</a>
            <a class="btn btn-primary btn float-right" href="{{ path('spend-add') }}">Ajouter </a>
        </div>
    </div>

    <div class="row">
        <div class=" collapse col-12 col-md-6 {{ show }}" id="search">
            {{ form_start(form) }}
            {{ form_row(form.label) }}
            {{ form_row(form.montant) }}
            <button type="submit" class="btn btn-outline-dark col-12 mb-2 mt-2 col-md-2">recherche</button>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="row">
        {% for spend in spends %}
            {% include 'caisse/spend-card.html.twig' with {
                id: spend.id,
                label: spend.label,
                date: spend.date|date,
                montant: spend.montant,
                supplier_id: spend.idSupplier,
                supplier_name: spend.nameSupplier
            } only %}
        {% endfor %}
    </div>
{% endblock %}
