{% extends "layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class=" title col-12 col-md-6 mr-auto ml-auto ">
            <h1> {{ mode|default }} </h1>
        </div>
    </div>
    <section class="content col-12 col-md-6 mr-auto ml-auto">

        {{ form_start(form) }}
        {{ form_row(form.label) }}
        {{ form_row(form.date) }}
        {{ form_row(form.montant) }}
        {{ form_row(form.supplier) }}

        <button type="submit" class="btn btn-primary float-right">{{ mode|default('Ajouter') }}</button>
        <button class="btn btn-secondary float-right  mr-2" type="reset">Annuler</button>

        {{ form_end(form) }}

    </section>

{% endblock %}